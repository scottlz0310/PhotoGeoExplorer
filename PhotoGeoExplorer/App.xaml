<Application
    x:Class="PhotoGeoExplorer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:preview="using:PhotoGeoExplorer.Panes.Preview">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <controls:XamlControlsResources />
                <ResourceDictionary Source="ms-appx:///Panes/Settings/SettingsPaneView.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="PreviewPaneTemplate">
                <preview:PreviewPaneViewControl />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
